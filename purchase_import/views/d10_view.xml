            id="menu_purchase_import_d10_view"
            name="D10"
            groups="purchase_import.group_importation,purchase_import.group_importation_user"
            parent="menu_purchase_import"
            action="open_view_purchase_import_d10_view_tree"
            sequence="20"

    />-->

</odoo>

