<?xml version="1.0"?>
<odoo>
    <record id="view_operation_deb_form" model="ir.ui.view">
        <field name="name">credit.operation.deb.form</field>
        <field name="model">credit.operation.deb</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_Confirm" name="action_Confirme" string="Confirmer"
                                class="btn-primary"
                                type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">

                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                <group>
                    <group>
                        <field name="banque_id"/>
                        <field name="type"/>
                        <field name="ligne_autorisation" />
                        <field name="reference_credit"/>
                        <field name="reference_interne"/>
                        <field name="partner"/>
                    </group>
                    <group>
                        <field name="montant_debloque"/>
                        <field name="montant_add"/>
                        <field name="montant_total"/>
                        <field name="montant_rembourser"/>
                        <field name="deblocage_date"/>
                        <field name="echeance_date"/>
                    </group>
                </group>
                    <notebook invisible="type not in [9,10,11,12]">
                        <page  string="Echeances partiels">
                            <tree>
                                <field name="echeances" />
                            </tree>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_operation_deb_tree" model="ir.ui.view">
        <field name="name">credit.operation.deb.tree</field>
        <field name="model">credit.operation.deb</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" readonly="1"/>
                <field name="ligne_autorisation"/>
                <field name="banque_id"/>
                <field name="type"/>
                <field name="deblocage_date"/>
                <field name="echeance_date" optional="show"/>
                <field name="reference_credit" optional="hide"/>
                <field name="reference_interne" optional="hide"/>
                <field name="partner"/>
                <field name="montant_debloque" sum="Total amount" widget="monetary" optional="show"/>
                <field name="montant_rembourser" sum="Total amount" widget="monetary" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="operation_deb_action" model="ir.actions.act_window">
        <field name="name">Operation de déblocage</field>
        <field name="res_model">credit.operation.deb</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="operation_deb_menu"
              name="Déblocage Credit"
              parent="oper_credit"
              action="operation_deb_action"
              sequence="20"/>

</odoo>